<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/material_btn_shareanimal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/ripple"
        android:text="水波纹" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/material_iv_oval"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/oval_green" />

        <ImageView
            android:id="@+id/material_iv_rect"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/rect_green" />
    </LinearLayout>


    <TextView
        android:id="@+id/material_tv_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="Happy New Year!"
        android:textColor="#000000"
        android:transitionName="MaterialShare_tv" />

    <ImageView
        android:id="@+id/material_iv_share"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_pic"
        android:transitionName="MaterialShare_iv" />
</LinearLayout>