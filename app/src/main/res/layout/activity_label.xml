<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.aiyakeji.mytest.widgets.LabelLayout
        android:id="@+id/labelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:labelFullLine="true"
        app:labelPaddingBottom="5dp"
        app:labelPaddingLeft="10dp"
        app:labelTextSize="12sp"
        app:labelPaddingRight="10dp"
        app:labelPaddingTop="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/blue"
            android:text="普通TextView"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/blue"
            android:includeFontPadding="false"
            android:text="去内边距TextView"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <com.aiyakeji.mytest.widgets.NoPaddingTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/blue"
            android:text="自定义"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:removeDefaultPadding="true" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvReadDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="读取数据库"
        android:textSize="17sp" />


    <EditText
        android:id="@+id/etInputMoney"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:textSize="17sp"
        android:layout_height="wrap_content"
        android:hint="测试输入金额格式"/>


    <com.aiyakeji.mytest.widgets.SlideImageView
        android:id="@+id/slideImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher" />
</LinearLayout>